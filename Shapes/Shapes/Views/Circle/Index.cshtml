@model Shapes.Models.Circle

@{
    ViewBag.Title = "Index";
}

<h2>Calculating for the Circle</h2>
@using (Html.BeginForm("Index", "Circle"))
{
<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            @Html.Label("Input your radius")
            @Html.TextBoxFor(m=>m.Radius, new { @type = "number", @class ="form-control"})
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Calculate" />
            <input type="submit" class="btn btn-default" value="Continue..." />
        </div>
    </div>

    <div class="col-md-6">
        <div class="alert-success"> 
            <p>@ViewBag.ThongBao</p>
        </div>
    </div>
</div>     
}

